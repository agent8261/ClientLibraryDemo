<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
<RelativeLayout
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
>
  <!-- Header -->
  <ImageView
    android:id="@+id/new_user_header_view"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginBottom = "5dip"
    android:background="@color/new_user_header_background_color"
    android:contentDescription="logo image"
    android:src="@drawable/imlc_logo_white_trans"/>
  
  <!-- New User Form -->
  <View
    android:id="@+id/contentView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/new_user_header_view"
    android:gravity="center"
    android:background="@color/new_user_content_background_color"/>

  <!-- Name Label -->
  <TextView
    android:id="@+id/lbl_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/new_user_header_view"
    android:layout_marginBottom = "5dip"
    android:text="Name:"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <!-- First Name Text Box -->
  <EditText
    android:id="@+id/first_name_txt"
    android:layout_width= "match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@id/lbl_name"    
    android:layout_marginBottom = "5dip"
    android:hint="First Name"
    android:inputType="textPersonName"/>
  
  <!-- Last Name Text Box -->
  <EditText
    android:id="@+id/last_name_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/first_name_txt"
    android:layout_alignLeft="@id/first_name_txt"
    android:layout_alignRight="@id/first_name_txt"
    android:layout_marginBottom = "5dip"
    android:hint="Last Name"
    android:inputType="textPersonName"/>
  
    <EditText
    android:id="@+id/email_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/last_name_txt"
    android:layout_alignLeft="@id/first_name_txt"
    android:layout_alignRight="@id/first_name_txt"
    android:layout_marginBottom = "5dip"
    android:hint="Email"
    android:inputType="textEmailAddress"/>
  
  <!-- Submit Button -->
  <Button
    android:id="@+id/submit_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/email_txt"
    android:layout_alignLeft="@id/first_name_txt"
    android:layout_alignRight="@id/first_name_txt"
    android:layout_marginBottom = "5dip"
    android:text="Sign Up"/>
  
  <!-- Copyright Footer -->
  <TextView
    android:id="@+id/copyright_footer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/submit_btn"
    android:layout_centerHorizontal="true"
    android:text="\u00A9 2013 IMLC"
    android:textAppearance="?android:attr/textAppearanceSmall"/>  
  
</RelativeLayout>
</ScrollView>